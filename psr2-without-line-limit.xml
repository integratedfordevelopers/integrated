<?xml version="1.0"?>
<ruleset name="PSR2-without-line-limit">
    <description>The PSR-2 coding standard without a line limit</description>
    <arg name="tab-width" value="4"/>

    <rule ref="PSR2"/>

    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="240"/>
            <property name="absoluteLineLimit" value="0"/>
        </properties>
    </rule>
</ruleset>