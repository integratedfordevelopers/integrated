<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_image.format_web">Integrated\Bundle\ImageBundle\Converter\Format\WebFormat</parameter>
        <parameter key="integrated_image.image.image_handler_mimic">Integrated\Bundle\ImageBundle\Image\ImageHandlerMimic</parameter>

        <parameter key="integrated_image.format" type="collection">
            <parameter>jpg</parameter>
            <parameter>gif</parameter>
            <parameter>jpeg</parameter>
            <parameter>png</parameter>
            <parameter>svg</parameter>
        </parameter>

    </parameters>


    <services>

        <service id="integrated_image.format_web" class="%integrated_image.format_web%">

            <argument>%integrated_image.format%</argument>

        </service>

        <service id="integrated_image.image_mimic_handling" class="%image.handling.class%">

            <argument>%gregwar_image.cache_dir%</argument>
            <argument>%gregwar_image.cache_dir_mode%</argument>
            <argument>%integrated_image.image.image_handler_mimic%</argument>
            <argument type="service" id="service_container" />
            <argument type="service" id="file_locator" />
            <argument>%gregwar_image.throw_exception%</argument>
            <argument>%gregwar_image.fallback_image%</argument>

        </service>

    </services>

</container>
