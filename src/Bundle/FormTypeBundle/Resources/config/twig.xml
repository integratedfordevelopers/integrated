<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="Integrated\Bundle\FormTypeBundle\Twig\BootstrapIconExtension">
            <argument>glyphicon</argument>
            <argument>span</argument>

            <tag name="twig.extension" />
        </service>

        <service id="Integrated\Bundle\FormTypeBundle\Twig\BootstrapButtonExtension">
            <argument type="service" id="Integrated\Bundle\FormTypeBundle\Twig\BootstrapIconExtension" />

            <tag name="twig.extension" />
        </service>

        <service id="Integrated\Bundle\FormTypeBundle\Twig\BootstrapLabelExtension">
            <tag name="twig.extension" />
        </service>

        <service id="Integrated\Bundle\FormTypeBundle\Twig\BootstrapBadgeExtension">
            <tag name="twig.extension" />
        </service>

        <service id="Integrated\Bundle\FormTypeBundle\Twig\BootstrapFormExtension">
            <tag name="twig.extension" />
        </service>

    </services>
</container>
