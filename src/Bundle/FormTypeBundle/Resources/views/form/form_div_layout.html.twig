                <a class="btn btn-gray-thin integrated-cancel-button" href="{{ path(cancel_route, cancel_route_parameters) }}">{% trans %}Cancel{% endtrans %}</a>
            </div><!-- container -->
        </section>
    {% endapply %}
{% endblock %}

