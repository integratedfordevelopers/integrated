<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

	<route id="integrated_user_group_index" path="/" methods="GET">
		<default key="_controller">Integrated\Bundle\UserBundle\Controller\GroupController::index</default>
	</route>

	<route id="integrated_user_group_new" path="/new">
		<default key="_controller">Integrated\Bundle\UserBundle\Controller\GroupController::new</default>
	</route>

	<route id="integrated_user_group_new_rest" path="/" methods="POST">
		<default key="_controller">Integrated\Bundle\UserBundle\Controller\GroupController::new</default>
	</route>

	<route id="integrated_user_group_edit" path="/{id}"  methods="GET">
		<default key="_controller">Integrated\Bundle\UserBundle\Controller\GroupController::edit</default>
	</route>

	<route id="integrated_user_group_edit_rest" path="/{id}" methods="PUT|POST">
		<default key="_controller">Integrated\Bundle\UserBundle\Controller\GroupController::edit</default>
	</route>

	<route id="integrated_user_group_delete" path="/{id}/delete">
		<default key="_controller">Integrated\Bundle\UserBundle\Controller\GroupController::delete</default>
	</route>

	<route id="integrated_user_group_delete_rest" path="/{id}" methods="DELETE">
		<default key="_controller">Integrated\Bundle\UserBundle\Controller\GroupController::delete</default>
	</route>

</routes>
