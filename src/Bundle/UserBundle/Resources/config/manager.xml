<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_user.user.class">Integrated\Bundle\UserBundle\Model\User</parameter>
        <parameter key="integrated_user.group.class">Integrated\Bundle\UserBundle\Model\Group</parameter>
        <parameter key="integrated_user.role.class">Integrated\Bundle\UserBundle\Model\Role</parameter>
        <parameter key="integrated_user.scope.class">Integrated\Bundle\UserBundle\Model\Scope</parameter>

    </parameters>

    <services>

        <service id="integrated_user.user.manager" alias="integrated_user.user.manager.doctrine"/>
        <service id="integrated_user.group.manager" alias="integrated_user.group.manager.doctrine"/>
        <service id="integrated_user.role.manager" alias="integrated_user.role.manager.doctrine"/>
        <service id="integrated_user.scope.manager" alias="integrated_user.scope.manager.doctrine"/>

    </services>

</container>
