<!DOCTYPE html>
<html>
<head>

    <title>{% block title %}{% trans %}Integrated{% endtrans %}{% endblock title %}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

{% block style %}

    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,600' rel='stylesheet' type='text/css'>
    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen" />

    {# TODO: migrate to Webpack Encore and remove CDN CSS
    {% stylesheets "@integrated_css" %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    #}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

{% endblock style %}

</head>
<body>
{% block form_theme %}
    {% if form is defined %}
        {% form_theme form with ['@IntegratedFormType/form/form_div_layout.html.twig'] %}
    {% endif %}
{% endblock %}

    <div class="container">
        {% block flash %}
            {% for label, messages in app.flashes(['alert', 'danger', 'info', 'success', 'warning']) %}
                {% for message in messages %}
                    {% if label == 'alert' %}
                        {% set label = 'warning' %}
                    {% endif %}
                    <div class="alert alert-{{ label }} alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        {{ message|trans }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock flash %}
        {% block body %}{% endblock body %}
    </div>

{% block javascript %}
    <script src="//code.jquery.com/jquery.js"></script>
    <script src="{{ asset('/js/bootstrap.js') }}"></script>

{# TODO: migrate to Webpack Encore
    {% javascripts "@integrated_js" %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
#}
{% endblock javascript %}

</body>
</html>
