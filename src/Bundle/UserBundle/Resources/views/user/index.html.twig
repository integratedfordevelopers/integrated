{% extends 'IntegratedContentBundle::base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-12 push-sm-down">
            <ul class="list-inline">
                <li class="dropdown">
                    <a href="#" data-toggle="dropdown" role="button" id="drop_1">Options <b class="caret"></b></a>
                    <ul aria-labelledby="drop_1" role="menu" class="dropdown-menu" id="menu_1">
                        <li role="presentation"><a href="{{ path('integrated_user_user_new') }}" tabindex="-1" role="menuitem">New</a></li>
                    </ul>
                </li>
            </ul>

            <section class="section-white section-padding section-shadow section-radius">
                <table class="table table-hover">

                    <colgroup>
                        <col style="width: 3em" />
                        <col />
                        <col />
                        <col style="width: 5em" />
                    </colgroup>

                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Username</th>
                            <th>Scope</th>
                            <th>Datum aangemaakt</th>
                            <th>Relation</th>
                            <th>Acties</th>
                        </tr>
                    </thead>

                    <tbody>

                    {% for user in users %}

                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.scope.name }}</td>
                            <td>{{ user.createdAt|date('d-m-y') }}</td>
                            <td>{% if user.relation.id|default %}
                                    <a href="{{ path('integrated_content_content_edit', {id: user.relation.id}) }}">{{ user.relation.name|default }} {{ user.relation.firstname|default }} {{ user.relation.lastname|default }}</a>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('integrated_user_user_edit', {'id': user.id}) }}" title="{% trans %}Edit{% endtrans %}"><span class="glyphicon glyphicon-edit"></span></a>
                                <a href="{{ path('integrated_user_user_delete', {'id': user.id}) }}" title="{% trans %}Delete{% endtrans %}"><span class="glyphicon glyphicon-remove-circle"></span></a>
                            </td>
                        </tr>

                   {% endfor %}

                    </tbody>

                </table>

                {{ knp_pagination_render(users) }}

            </section>
        </div>
    </div>
{% endblock %}
