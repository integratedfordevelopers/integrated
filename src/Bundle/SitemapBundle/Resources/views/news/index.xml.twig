{% spaceless %}
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:news="http://www.google.com/schemas/sitemap-news/0.9">
    {% for document in documents %}
        <url>
            <loc>{{ absolute_url(integrated_url(document)) }}</loc>
            <news:news>
                <news:publication>
                    <news:name>{{ channel.name }}</news:name>
                    <news:language>{{ locale }}</news:language>
                </news:publication>
                <news:publication_date>{{ document.publishTime.startDate|date('Y-m-d') }}</news:publication_date>
                <news:title>{{ document.title }}</news:title>
                <news:keywords>{{ document.referencesByRelationType('taxonomy')|join(', ') }}</news:keywords>
            </news:news>
        </url>
    {% endfor %}
</urlset>
{% endspaceless %}