<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="integrated_social.form.twitter_type" class="Integrated\Bundle\SocialBundle\Form\Type\TwitterType">
            <tag name="form.type" />
        </service>

        <service id="integrated_social.form.facebook_type" class="Integrated\Bundle\SocialBundle\Form\Type\FacebookType">
            <argument type="service" id="integrated_social.facebook" />

            <tag name="form.type" />
        </service>

    </services>

</container>
