<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                    http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <embedded-document name="Integrated\Bundle\BlockBundle\Document\Block\Embedded\BlockSize">

        <field name="size" type="int" />
        <field name="sizeXs" type="int" />
        <field name="sizeSm" type="int" />
        <field name="sizeMd" type="int" />
        <field name="sizeLg" type="int" />

        <reference-one field="block" target-document="Integrated\Bundle\BlockBundle\Document\Block\Block" />

    </embedded-document>

</doctrine-mongo-mapping>