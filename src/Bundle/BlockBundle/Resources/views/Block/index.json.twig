{% spaceless %}
{% set data = [] %}

{% for block in blocks %}
    {% set data = data|merge([{
        'id'   : block.id,
        'title': block.title,
        'type' : block.type
    }]) %}
{% endfor %}

{% set json = {'blocks': data,
    'filters': {
        'type': facetFilter.type.vars.choices,
        'channels': facetFilter.channels.vars.choices
    },
    'pagination': blocks|json_pagination
} %}


{{ json|json_encode|raw }}
{% endspaceless %}