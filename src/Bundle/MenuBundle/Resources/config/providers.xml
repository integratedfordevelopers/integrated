<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_menu.provider.menu_provider.class">Integrated\Bundle\MenuBundle\Provider\MenuProvider</parameter>

        <parameter key="integrated_menu.provider.database_menu_provider.class">Integrated\Bundle\MenuBundle\Provider\DatabaseMenuProvider</parameter>

    </parameters>

    <services>

        <service id="integrated_menu.provider.menu_provider" class="%integrated_menu.provider.menu_provider.class%">
            <argument type="service" id="knp_menu.factory" />
            <argument type="service" id="event_dispatcher" />
            <tag name="knp_menu.provider" />
        </service>

        <service id="integrated_menu.provider.database_menu_provider" class="%integrated_menu.provider.database_menu_provider.class%" public="true">
            <argument type="service" id="channel.context" />
            <argument type="service" id="integrated_menu.document.menu.repository" />
            <argument type="service" id="integrated_content.provider.solarium" />
            <argument type="service" id="integrated_page.services.solr_url_extractor" />
            <tag name="knp_menu.provider" />
        </service>

        <service id="Integrated\Bundle\MenuBundle\Provider\BreadcrumbMenuProvider">
            <argument type="service" id="knp_menu.factory" />
            <argument type="service" id="Integrated\Bundle\PageBundle\Breadcrumb\BreadcrumbResolver" />
            <tag name="knp_menu.provider" />
        </service>

    </services>

</container>
