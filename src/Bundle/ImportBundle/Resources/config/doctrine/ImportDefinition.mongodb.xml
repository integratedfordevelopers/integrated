<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <document name="Integrated\Bundle\ImportBundle\Document\ImportDefinition" collection="importdefinition">

        <field fieldName="id" id="true" strategy="UUID"/>
        <field fieldName="name" type="string"/>
        <field fieldName="contentType" type="string"/>
        <field fieldName="createdAt" type="date"/>
        <field fieldName="executedAt" type="date"/>
        <field fieldName="channels" type="collection"/>
        <field fieldName="fileId" type="string"/>
        <field fieldName="imageBaseUrl" type="string"/>
        <field fieldName="imageContentType" type="string"/>
        <field fieldName="fileContentType" type="string"/>
        <field fieldName="authorContentType" type="string"/>
        <field fieldName="connectionUrl" type="string"/>
        <field fieldName="connectionQuery" type="string"/>

        <embed-many field="fields" target-document="Integrated\Bundle\ImportBundle\Document\Embedded\ImportField" />

        <reference-one field="imageRelation" target-document="Integrated\Bundle\ContentBundle\Document\Relation\Relation" />

        <reference-one field="fileRelation" target-document="Integrated\Bundle\ContentBundle\Document\Relation\Relation" />

        <reference-many field="channels" target-document="Integrated\Bundle\ContentBundle\Document\Channel\Channel" />

    </document>

</doctrine-mongo-mapping>
