        <service id="jms_serializer.object_constructor" alias="jms_serializer.initialized_object_constructor" public="false">
        </service>

        <service id="jms_serializer.initialized_object_constructor" class="Integrated\Bundle\ImportBundle\Serializer\InitializedObjectConstructor" public="false">
            <argument>@jms_serializer.unserialize_object_constructor</argument>
        </service>
    </services>

