<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="integrated_comment.controller.default.class">Integrated\Bundle\CommentBundle\Controller\DefaultController</parameter>
    </parameters>

    <services>

        <service id="integrated_comment.controller.default" class="%integrated_comment.controller.default.class%">
            <argument type="service" id="templating" />
            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="security.token_storage" />
        </service>

    </services>

</container>