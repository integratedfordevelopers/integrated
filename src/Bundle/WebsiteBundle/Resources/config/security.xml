<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="Integrated\Bundle\WebsiteBundle\Security\Authenticator">
            <argument id="doctrine.orm.entity_manager" type="service"/>
            <argument id="router.default" type="service"/>
            <argument id="security.csrf.token_manager" type="service"/>
            <argument id="security.user_password_encoder.generic" type="service"/>
            <argument id="integrated_content.channel.context" type="service"/>
        </service>

        <service id="Integrated\Bundle\WebsiteBundle\Security\UserManager">
            <argument id="doctrine.orm.entity_manager" type="service"/>
            <argument id="security.user_password_encoder.generic" type="service"/>
            <argument id="integrated_content.channel.context" type="service"/>
            <argument id="validator" type="service"/>
        </service>

    </services>
</container>
