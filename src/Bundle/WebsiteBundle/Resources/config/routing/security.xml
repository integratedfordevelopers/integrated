<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="integrated_website_login" path="/login">
        <default key="_controller">IntegratedWebsiteBundle:Security:login</default>
    </route>

    <route id="integrated_website_login_check" path="/login-check">
    </route>

    <route id="integrated_website_login_verify" path="/login-verify">
        <default key="_controller">IntegratedWebsiteBundle:Security:verifyUsername</default>
        <option key="expose">true</option>
    </route>

    <route id="integrated_website_logout" path="/logout">
        <default key="_controller">IntegratedWebsiteBundle:Security:logout</default>
    </route>
</routes>
