<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="integrated_content_content_type_index" path="/" methods="GET">
        <default key="_controller">Integrated\Bundle\ContentBundle\Controller\ContentTypeController::index</default>
    </route>

    <route id="integrated_content_content_type_select" path="/select" methods="GET">
        <default key="_controller">Integrated\Bundle\ContentBundle\Controller\ContentTypeController::select</default>
    </route>

    <route id="integrated_content_content_type_new" path="/new">
        <default key="_controller">Integrated\Bundle\ContentBundle\Controller\ContentTypeController::new</default>
    </route>

    <route id="integrated_content_content_type_new_rest" path="/" methods="POST">
        <default key="_controller">Integrated\Bundle\ContentBundle\Controller\ContentTypeController::new</default>
    </route>

    <route id="integrated_content_content_type_edit" path="/{id}" methods="GET">
        <default key="_controller">Integrated\Bundle\ContentBundle\Controller\ContentTypeController::edit</default>
    </route>

    <route id="integrated_content_content_type_edit_rest" path="/{id}" methods="PUT">
        <default key="_controller">Integrated\Bundle\ContentBundle\Controller\ContentTypeController::edit</default>
    </route>

    <route id="integrated_content_content_type_delete" path="/{id}" methods="DELETE">
        <default key="_controller">Integrated\Bundle\ContentBundle\Controller\ContentTypeController::delete</default>
    </route>

    <route id="integrated_content_content_type_delete_rest" path="/{id}/delete">
        <default key="_controller">Integrated\Bundle\ContentBundle\Controller\ContentTypeController::delete</default>
    </route>

    <route id="integrated_content_content_type_show" path="/{id}/show" methods="GET">
        <default key="_controller">Integrated\Bundle\ContentBundle\Controller\ContentTypeController::show</default>
    </route>

</routes>
