<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                    http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <embedded-document name="Integrated\Bundle\ContentBundle\Document\FormConfig\Embedded\Field\RelationField">

        <field fieldName="options" type="hash" />

        <reference-one
                field="relation"
                target-document="Integrated\Bundle\ContentBundle\Document\Relation\Relation" />

    </embedded-document>

</doctrine-mongo-mapping>