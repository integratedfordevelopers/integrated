<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                    http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <document name="Integrated\Bundle\ContentBundle\Document\Content\Product">

        <field field-name="title" type="string" />
        <field field-name="reference" type="string" />
        <field field-name="variant" type="string" />
        <field field-name="locale" type="string" />
        <field field-name="price" type="float" />
        <field field-name="stockQuantity" type="integer" />
        <field field-name="orderable" type="boolean" />
        <field field-name="description" type="string" />
        <field field-name="content" type="string" />

    </document>

</doctrine-mongo-mapping>
