<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                    http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <document name="Integrated\Bundle\ContentBundle\Document\Content\Product">

        <field fieldName="title" type="string" />
        <field fieldName="reference" type="string" />
        <field fieldName="variant" type="string" />
        <field fieldName="locale" type="string" />
        <field fieldName="price" type="float" />
        <field fieldName="stockQuantity" type="integer" />
        <field fieldName="orderable" type="boolean" />
        <field fieldName="description" type="string" />
        <field fieldName="content" type="string" />

    </document>

</doctrine-mongo-mapping>
