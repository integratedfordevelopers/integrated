<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                    http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <document name="Integrated\Bundle\ContentBundle\Document\FormConfig\FormConfig" collection="form_config">

        <field fieldName="id" id="true" strategy="NONE" />
        <field fieldName="name" type="string" />
        <field fieldName="contentType" type="string" />

        <embed-many field="fields">
            <discriminator-map>
                <discriminator-mapping value="document" class="Integrated\Bundle\ContentBundle\Document\FormConfig\Embedded\DocumentField" />
                <discriminator-mapping value="custom" class="Integrated\Bundle\ContentBundle\Document\FormConfig\Embedded\CustomField" />
                <discriminator-mapping value="relation" class="Integrated\Bundle\ContentBundle\Document\FormConfig\Embedded\RelationField" />
            </discriminator-map>
            <default-discriminator-value value="document" />
        </embed-many>

    </document>

</doctrine-mongo-mapping>
