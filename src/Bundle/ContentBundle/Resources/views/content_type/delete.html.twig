{% extends '@IntegratedContent/base.html.twig' %}

{% block crumbs %}
    <div class="breadcrumb-holder">
        <div class="container">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('integrated_content_content_type_index') }}">{% trans %}Content types{% endtrans %}</a>
                </li>
                <li class="active">{% trans %}Delete{% endtrans %}</li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block content %}
    <h1 class="main-title font-regular">
        {% trans %}Delete{% endtrans %} {{ contentType.name }}
        <i class="integrate-icon-edit"></i>
    </h1>

    <div class="row">
        <div class="col-md-12">
            <section class="section-white section-padding section-shadow section-radius">
                <p>
                    {% trans with {'%name%': contentType.title|default(contentType.name|default(contentType.id)) } %}
                        You are about to delete "%name%", click the delete button below to confirm the action.
                    {% endtrans %}
                </p>
                <p>
                    <a class="btn btn-primary" href="{{ path('integrated_content_content_type_index') }}">
                        {% trans %}Cancel{% endtrans %}
                    </a>
                </p>
                {{ form(form) }}
            </section>
        </div>
    </div>
{% endblock %}
