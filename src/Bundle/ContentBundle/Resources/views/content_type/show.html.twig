{% extends 'IntegratedContentBundle::base.html.twig' %}
{% block crumbs %}
    <div class="breadcrumb-holder">
        <div class="container">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('integrated_content_content_type_index') }}">{% trans %}Content types{% endtrans %}</a>
                </li>
                <li class="active">{% trans %}Show{% endtrans %}</li>
            </ol>
        </div>
    </div>
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12 push-sm-down">
            <h1 class="main-title font-regular">{% trans %}Show{% endtrans %}</h1>
            <section class="section-white section-padding section-shadow section-radius">
                <dl class="dl-horizontal">
                    <dt>
                        {% trans %}Name{% endtrans %}
                    </dt>
                    <dd>
                        {{ contentType.name }}
                    </dd>
                    <dt>
                        {% trans %}Type{% endtrans %}
                    </dt>
                    <dd>
                        {{ contentType.id }}
                    </dd>
                    <dt>
                        {% trans %}Relations{% endtrans %}
                    </dt>
                    <dd>
                        {{ render(controller("IntegratedContentBundle:Relation:index", {'contentType': contentType.id, '_format': 'inline.html'})) }}
                    </dd>
                    <dt>
                        {% trans %}Form configurations{% endtrans %}
                    </dt>
                    <dd>
                        {{ render(controller('integrated_content.controller.form_config_controller:indexAction', {'type': contentType, '_format': 'inline.html'})) }}
                    </dd>
                </dl>

                <a class="pull-left btn btn-primary" style="margin-right:10px;" href="{{ path('integrated_content_content_type_edit', {'id': contentType.id}) }}">
                    {% trans %}Edit{% endtrans %}
                </a>

                {% if not contentType.locked %}
                    {{ form(form, { 'style': 'inline' }) }}
                {% endif %}
            </section>
        </div>
    </div>
{% endblock %}
