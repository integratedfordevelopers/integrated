{% extends 'IntegratedContentBundle::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12 push-sm-down">
            <section class="section-white section-padding section-shadow section-radius">
                <table class="table table-striped table-hover">
                    <colgroup>
                        <col />
                        <col />
                        <col style="width: 5em" />
                    </colgroup>

                    <thead>
                        <tr>
                            <th>{% trans %}Search selections{% endtrans %}</th>
                            <th>{% trans %}Short code{% endtrans %}</th>
                            <th>{% trans %}Actions{% endtrans %}</th>
                        </tr>
                    </thead>

                    <tbody>
                        {% for searchSelection in searchSelections %}

                            <tr>
                                <td>{{ searchSelection.title }}</td>
                                <td>{{ searchSelection.id|default }}</td>
                                <td>
                                    {% if not searchSelection.locked %}
                                    <a href="{{ path('integrated_content_search_selection_edit', { 'id': searchSelection.id }) }}" title="{% trans %}Edit{% endtrans %}"><span class="glyphicon glyphicon-edit"></span></a>
                                    <a href="{{ path('integrated_content_search_selection_delete', { 'id': searchSelection.id }) }}" title="{% trans %}Delete{% endtrans %}"><span class="glyphicon glyphicon-remove-circle"></span></a>
                                    {% endif %}
                                </td>
                            </tr>

                        {% endfor %}
                    </tbody>
                </table>

                {{ knp_pagination_render(searchSelections) }}
            </section>
        </div>
    </div>

{% endblock %}