<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <style>
        body, td {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 14px;
        }
    </style>
</head>
<body class="bg-white">

<div class="w-50 m-auto">
    <!-- email template -->
    <table class="body-wrap" style="font-family: Arial, Helvetica, sans-serif; box-sizing: border-box; font-size: 14px; width: 100%; background-color: #eaf0f7; margin: 0;" bgcolor="#eaf0f7">
        <tr>
            <td class="container" width="600" style="display: block !important; max-width: 600px !important; clear: both !important;" valign="top">
                <div class="content" style="padding: 50px 0;">
                    <table class="main" width="100%" cellpadding="0" cellspacing="0" style="border: 1px solid #e9e9e9;" bgcolor="#fff">
                        <tr>
                            <td style="color:#ffffff; background-color: #016aac; padding: 20px; border-radius: 0;" align="center" valign="top">
                                {{ subject }}
                            </td>
                        </tr>
                        <tr>
                            <td class="content-wrap" style="padding: 20px;" valign="top">
                                <table width="100%" cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td class="content-block" style="font-family: Arial, Helvetica, sans-serif; font-size: 14px; padding: 10px" valign="top">
                                            {{ body }}
                                        </td>
                                    </tr>
                                    {% if (buttonLink) %}
                                    <tr>
                                        <td class="content-block" style="font-family: Arial, Helvetica, sans-serif; font-size: 14px; padding: 0 0 20px;" valign="top"><a href="{{ buttonLink }}" class="btn-primary" style="font-size: 14px; text-decoration: none; line-height: 2em; font-weight: bold; text-align: center; cursor: pointer; display: block; border-radius: 5px; text-transform: capitalize; background-color: #5066e1; border-color: #5066e1; padding: 8px 0;">{{ buttonText }}</a></td>
                                    </tr>
                                    {% endif %}
                                    <tr>
                                        <td class="content-block" style="font-family: Arial, Helvetica, sans-serif; font-size: 14px; text-align: center; color: #BCC1C7;" valign="top">{% trans with {'%domain%': app.request.httpHost}  %}This email was send by Integrated on %domain%{% endtrans %}</td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </div>
            </td>
            <td style="font-family: Arial, Helvetica, sans-serif; box-sizing: border-box; font-size: 14px; vertical-align: top; margin: 0;" valign="top"></td>
        </tr>
    </table>
</div>

</body>
</html>
