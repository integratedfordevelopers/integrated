{% extends '@IntegratedContent/base.html.twig' %}

{% block style %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('bundles/integratedintegrated/edit.css') }}">
{% endblock %}

{% block crumbs %}
    <div class="breadcrumb-holder">
        <div class="container">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('integrated_content_channel_index') }}">{% trans %}Channel{% endtrans %}</a>
                </li>
                <li class="active">{% trans %}New{% endtrans %}</li>
            </ol>
        </div>
    </div>
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12 push-sm-down">
            <h1 class="main-title font-regular">{% trans %}New{% endtrans %}</h1>
            <section class="section-white section-padding section-shadow section-radius">
                {{ form(form, {'style': 'horizontal'}) }}
            </section>
        </div>
    </div>
{% endblock %}

{% block webpack_js %}
    <script src="{{ asset('bundles/integratedintegrated/edit.js') }}"></script>
{% endblock %}

{% block javascript %}
    {{ parent() }}

    <script src="{{ asset('bundles/integratedcontent/js/channel.js') }}" />
{% endblock javascript %}
