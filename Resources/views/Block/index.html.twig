{% extends 'IntegratedContentBundle::base.html.twig' %}

{% block content %}

    <div class="filters_row">
        <ul class="nav nav-pills">
            <li class="dropdown">
                <a href="#" data-toggle="dropdown" role="button">{% trans %}Create new{% endtrans %} <b class="caret"></b></a>
                <ul role="menu" class="dropdown-menu">
                    {% for metadata in factory.allMetadata %}
                        <li role="presentation">
                            <a href="{{ path('integrated_block_block_new') }}?class={{ metadata.class }}">{{ metadata.type|default(metadata.class) }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </li>
        </ul>
    </div>

    <div class="content_columns_holder">
        <div class="col-sm-8 content_column">
            <div class="content_column_inner">

                <table class="table">
                    <colgroup>
                        <col />
                        <col />
                        <col />
                        {% if pageBundleExist %}<col />{% endif %}
                        <col style="width: 5em" />
                    </colgroup>

                    <thead>
                        <tr>
                            <th>{{ knp_pagination_sortable(blocks, 'Block name', 'title') }}</th>
                            <th>{{ knp_pagination_sortable(blocks, 'Short code', 'id') }}</th>
                            <th>{{ knp_pagination_sortable(blocks, 'Type', 'type') }}</th>
                            {% if pageBundleExist %}
                                <th>{% trans %}Channels{% endtrans %}</th>
                                <th>{% trans %}Pages{% endtrans %}</th>
                            {% endif %}
                            <th>{% trans %}Actions{% endtrans %}</th>
                        </tr>
                    </thead>
                    <tbody>

                    {% for block in blocks %}

                        <tr>
                            <td>
                                {{ block.title }}
                            </td>
                            <td>
                                {{ block.id }}
                            </td>
                            <td>
                                {{ block.type }}
                            </td>
                            {% if pageBundleExist %}
                                <td>{{ find_channels(block) }}</td>
                                <td>{{ find_pages(block) }}</td>
                            {% endif %}
                            <td>
                                <a href="{{ path('integrated_block_block_edit', { 'id': block.id }) }}" title="{% trans %}Edit{% endtrans %}">
                                    {{ icon('pencil') }}
                                </a>
                                {% if not block.locked %}
                                    {% if pageBundleExist and not find_pages(block) %}
                                        <a href="{{ path('integrated_block_block_delete', { 'id': block.id }) }}" title="{% trans %}Delete{% endtrans %}">
                                            {{ icon('remove-circle') }}
                                        </a>
                                    {% endif  %}
                                {% endif %}
                            </td>
                        </tr>

                    {% else %}

                        <tr>
                            <td colspan="4">
                                {% trans %}No blocks added{% endtrans %}
                            </td>
                        </tr>

                    {% endfor %}

                    </tbody>
                </table>

                {{ knp_pagination_render(blocks) }}
            </div>
        </div>
        <div class="col-sm-4 sidebar_right">
            <div class="content_column_inner block-facet-filter">
                {{ form_start(facetFilter) }}
                    {{ form_row(facetFilter.type) }}
                    <br/>
                    <br/>
                    {{ form_row(facetFilter.channels) }}
                {{ form_end(facetFilter) }}
            </div>
        </div>

    </div>

{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript">
      $(function () {
        $(".block-facet-filter").find('form').on('change', function () {
          $(this).trigger('submit');
        });
      });
    </script>
{% endblock %}