</header>
<section class="content_section">
    <div class="container">

        {% block body %}
            <div class="col-sm-12 content_wrapper">
                {% block flash %}
                    {% include 'BraincraftedBootstrapBundle::flash.html.twig' with { 'close': true } %}
                {% endblock flash %}
                {% block content %}{% endblock content %}
            </div>
        {% endblock body %}

    </div>
</section>

{% block javascript %}

    <script src="//code.jquery.com/jquery.js"></script>
    <script src="{{ asset('/js/bootstrap.js') }}"></script>

    {% javascripts "@integrated_js" %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% block locking %}
        {% if lock.lock is defined and lock.locked == false %}
            {% include 'IntegratedLockingBundle::locking.refresh.html.twig' with { 'lock': lock.lock } %}
        {% endif %}
    {% endblock locking %}

{% endblock javascript %}

</body>
</html>