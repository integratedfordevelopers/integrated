{% extends 'IntegratedContentBundle::base.html.twig' %}
{% block crumbs %}
    <div class="breadcrumb-holder">
        <div class="container">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('integrated_content_search_selection_index') }}">{% trans %}Home{% endtrans %}</a>
                </li>
                <li class="active">{% trans %}Delete{% endtrans %}</li>
            </ol>
        </div>
    </div>
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12 push-sm-down">
            <h1 class="main-title font-regular"><h1>{% trans %}Delete{% endtrans %} <small>Search selection</small></h1></h1>
            <section class="section-white section-padding section-shadow section-radius">
                <p>
                    {% trans with {'%name%':  searchSelection.title} %}You are about to delete "%name%", click the delete button below to confirm the action.{% endtrans %}
                </p>
                {% if referenced %}
                    <div class="alert alert-danger">
                        {% trans %} This item is still on use by: {% endtrans %}<br>
                        {% for item in referenced %}
                            {% if item.action is defined %}
                                <a href="{{ path(item.action,{'id':item.id}) }}">{{ item.name }}</a><br>
                            {% else %}
                                {{ item.name }} &nbsp; {{ item.id }}<br>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
                {{ form(form) }}
            </section>
        </div>
    </div>
{% endblock %}