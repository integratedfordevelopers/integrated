<h1>New</h1>
{{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_row(form.class) }}
    {{ form_row(form._token) }}
    <div class="form-group">
        {{ form_row(form.type) }}
    </div>
    <div class="form-group">
        Velden | Verplicht
        <hr />
        {% for field in form.fields %}
            {{ form_widget(field.enabled) }}
            {{ form_label(field.enabled) }}
            |
            {{ form_widget(field.required) }}
            <hr />
        {% endfor %}
    </div>
    {{ form_row(form.submit) }}
{{ form_end(form) }}