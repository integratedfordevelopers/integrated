<ul>
    <li>
        <a href="{{ path('integrated_content_contenttype_index') }}">
            Overview
        </a>
    </li>
    <li>
        <a href="{{ path('integrated_content_contenttype_edit', {'id': contentType.id}) }}">
            Edit
        </a>
    </li>
</ul>
<h1>Show</h1>
<dl>
    <dt>
        ClassType
    </dt>
    <dd>
        {{ contentType.type }}
    </dd>
    <dt>
    ClassName
    </dt>
    <dd>
    {{ contentType.class }}
    </dd>
    <dt>
        Fields
    </dt>
    <dd>
        <ul>
            {% for field in contentType.fields %}
            <li>
                {{ field.name }}
                |
                {{ field.label }}
                |
                {{ field.type }}
                {% if field.required %}
                | required
                {% endif %}
            </li>
            {% else %}
            <li>
                No fields added
            </li>
            {% endfor %}
        </ul>
    </dd>
    <dt>
        Relations
    </dt>
    <dd>
        <ul>
            {% for relation in contentType.relations %}
            <li>
                {{ relation.contentType.class }}
                |
                {{ relation.contentType.type }}
                |
                {% if relation.multiple == 1 %}
                Multiple
                {% else %}
                One
                {% endif %}
                {% if relation.required %}
                    | required
                {% endif %}

            </li>
            {% else %}
            <li>
                No relations added
            </li>
            {% endfor %}
        </ul>
    </dd>
</dl>
{{ form(form) }}