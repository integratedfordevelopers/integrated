<div class="panel panel-default">
    <div class="panel-heading">
        {{ block.title }}
    </div>

    <div class="panel-body">
        <form method="get"{% if block.url|default %} action="{{ block.url }}"{% endif %}>
            <div class="input-group">
                <input type="text" name="{{ block.block.id }}-search" class="form-control" value="{{ app.request.get(block.block.id ~ '-search') }}" title="Search" />
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
