{% extends 'IntegratedContentBundle::base.html.twig' %}

{% block content %}

    <div class="filters_row">
        <ul class="nav nav-pills">
            <li class="dropdown">
                <a href="#" data-toggle="dropdown" role="button">{% trans %}Options{% endtrans %} <b class="caret"></b></a>
                <ul role="menu" class="dropdown-menu">
                    <li role="presentation">
                        <a href="{{ path('integrated_page_page_new') }}" tabindex="-1" role="menuitem">{% trans %}New{% endtrans %}</a>
                    </li>
                </ul>
            </li>
        </ul>
    </div>

    <div class="content_columns_holder">
        <div class="content_column_inner">

            <table class="table">
                <colgroup>
                    <col />
                    <col />
                    <col style="width: 5em" />
                </colgroup>

                <thead>
                    <tr>
                        <th>{% trans %}Title{% endtrans %}</th>
                        <th>{% trans %}URL{% endtrans %}</th>
                        <th>{% trans %}Actions{% endtrans %}</th>
                    </tr>
                </thead>
                <tbody>

                {% for page in pages %}

                    <tr>
                        <td>
                            {{ page.title }}
                        </td>
                        <td>
                            {{ page.path }}
                        </td>
                        <td>
                            <a href="{{ path('integrated_page_page_edit', { 'id': page.id }) }}" title="{% trans %}Edit{% endtrans %}">
                                {{ icon('pencil') }}
                            </a>
                            <a href="{{ path('integrated_page_page_delete', { 'id': page.id }) }}" title="{% trans %}Delete{% endtrans %}">
                                {{ icon('remove-circle') }}
                            </a>
                        </td>
                    </tr>

                {% else %}

                    <tr>
                        <td colspan="4">
                            {% trans %}No pages added{% endtrans %}
                        </td>
                    </tr>

                {% endfor %}

                </tbody>
            </table>

            {{ knp_pagination_render(pages) }}
        </div>
    </div>

{% endblock %}
