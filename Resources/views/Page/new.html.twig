{% extends 'IntegratedContentBundle::base.html.twig' %}

{% block content %}

    <div class="content_columns_holder">
        <div class="content_column_inner">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('integrated_page_page_index') }}">{% trans %}Home{% endtrans %}</a>
                </li>
                <li class="active">{% trans %}New{% endtrans %}</li>
            </ol>

            <div class="page-header">
                <h1>{% trans %}New{% endtrans %} <small>Page</small></h1>
            </div>

            {{ form_start(form, { 'style': 'horizontal' }) }}
            {{ form_errors(form) }}

            {{ form_row(form.title) }}
            {{ form_row(form.slug) }}
            {{ form_row(form.layout) }}
            {{ form_row(form.publishedAt) }}
            {{ form_row(form.disabled) }}

            {{ form_row(form._token) }}
            {{ form_row(form.submit) }}
            {{ form_end(form, { 'render_rest': false }) }}
        </div>
    </div>

{% endblock %}