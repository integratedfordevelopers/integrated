<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<services>

		<service id="integrated_user.role.edit.form.type" class="%integrated_user.form.proxy.type.class%">
			<argument type="service" id="integrated_user.form.role.type" />
			<argument type="string">user_role_new</argument>

			<tag name="form.type" alias="user_role_new" />
		</service>

		<service id="integrated_user.role.new.form.type" class="%integrated_user.form.proxy.type.class%">
			<argument type="service" id="integrated_user.form.role.type" />
			<argument type="string">user_role_edit</argument>

			<tag name="form.type" alias="user_role_edit" />
		</service>

		<service id="integrated_user.role.delete.form.type" class="%integrated_user.form.proxy.type.class%">
			<argument type="service" id="integrated_user.form.delete.type" />
			<argument type="string">user_role_delete</argument>

			<tag name="form.type" alias="user_role_delete" />
		</service>

	</services>

</container>