<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_page.twig.extension.url.class">Integrated\Bundle\PageBundle\Twig\Extension\UrlExtension</parameter>

    </parameters>

    <services>

        <service id="integrated_page.twig.extension.url" class="%integrated_page.twig.extension.url.class%">
            <argument type="service" id="integrated_page.services.url_resolver" />
            <tag name="twig.extension" />
        </service>

    </services>
</container>
