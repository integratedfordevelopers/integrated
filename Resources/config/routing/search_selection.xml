<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="integrated_content_search_selection_index" path="/" methods="GET">
        <default key="_controller">IntegratedContentBundle:SearchSelection:index</default>
    </route>

    <route id="integrated_content_search_selection_new" path="/new" methods="GET|POST">
        <default key="_controller">IntegratedContentBundle:SearchSelection:new</default>
    </route>

    <route id="integrated_content_search_selection_edit" path="/{id}/edit" methods="GET|PUT">
        <default key="_controller">IntegratedContentBundle:SearchSelection:edit</default>
    </route>

    <route id="integrated_content_search_selection_delete" path="/{id}/delete" methods="GET|DELETE">
        <default key="_controller">IntegratedContentBundle:SearchSelection:delete</default>
    </route>

</routes>