<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_storage.database">Integrated\Bundle\StorageBundle\Storage\Database\DoctrineODMDatabase</parameter>
        <parameter key="integrated_storage.database_delete">Integrated\Bundle\StorageBundle\Doctrine\Storage</parameter>

    </parameters>

    <services>

        <service id="integrated_storage.database" class="%integrated_storage.database%">
            <!--
                Container put in intentionally, a developer can override the class parameter and make its own implementation.
                The class its self is responsible for error checking its dependencies.
             -->
            <argument type="service" id="service_container" />
        </service>

        <service id="integrated_storage.database_delete" class="%integrated_storage.database_delete%">
            <argument type="service" id="integrated_storage.manager" />
        </service>

    </services>

</container>
