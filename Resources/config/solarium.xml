<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

		<parameter key="integrated_solr.solarium.client.class">Solarium\Client</parameter>

    </parameters>

    <services>

		<service id="integrated_solr.solarium.client.indexer" class="%integrated_solr.solarium.client.class%">
			<argument type="collection">
				<argument type="collection" key="endpoint">
					<argument type="collection" key="default">
						<argument key="host">localhost</argument>
						<argument key="port">8983</argument>
						<argument key="path">/solr/</argument>
						<argument key="core">testintegrated</argument>
						<argument key="timeout">30</argument>
					</argument>
				</argument>
			</argument>
		</service>

    </services>

</container>