<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<services>

        <service id="integrated_workflow.repository.definition" class="Doctrine\Common\Persistence\ObjectRepository">
            <factory service="doctrine.orm.entity_manager" method="getRepository" />

            <argument type="string">Integrated\Bundle\WorkflowBundle\Entity\Definition</argument>
        </service>

        <service id="integrated_workflow.repository.workflow" class="Doctrine\Common\Persistence\ObjectRepository">
            <factory service="doctrine.orm.entity_manager" method="getRepository" />

            <argument type="string">Integrated\Bundle\WorkflowBundle\Entity\Workflow\State</argument>
        </service>

	</services>

</container>