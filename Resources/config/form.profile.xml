<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<services>

		<service id="integrated_user.profile.form.type" class="%integrated_user.form.proxy.type.class%">
			<argument type="service" id="integrated_user.form.profile.type" />
			<argument type="string">user_profile</argument>

			<tag name="form.type" alias="user_profile" />
		</service>

		<service id="integrated_user.profile.edit.form.type" class="%integrated_user.form.proxy.type.class%">
			<argument type="service" id="integrated_user.form.profile.type" />
			<argument type="string">user_profile_edit</argument>

			<tag name="form.type" alias="user_profile_edit" />
		</service>

		<service id="integrated_user.profile.new.form.type" class="%integrated_user.form.proxy.type.class%">
			<argument type="service" id="integrated_user.form.profile.type" />
			<argument type="string">user_profile_new</argument>

			<tag name="form.type" alias="user_profile_new" />
		</service>

		<service id="integrated_user.profile.delete.form.type" class="%integrated_user.form.proxy.type.class%">
			<argument type="service" id="integrated_user.form.delete.type" />
			<argument type="string">user_profile_delete</argument>

			<tag name="form.type" alias="user_profile_delete" />
		</service>

	</services>

</container>