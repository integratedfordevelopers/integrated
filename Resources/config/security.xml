<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>

		<parameter key="integrated_user.security.provider.class">Integrated\Bundle\UserBundle\Security\UserProvider</parameter>

		<parameter key="integrated_user.user_manager.class">Integrated\Bundle\UserBundle\Doctrine\UserManager</parameter>

	</parameters>

	<services>

		<service id="integrated_user.security.provider" class="%integrated_user.security.provider.class%">
			<argument type="service" id="integrated_user.user.manager" />
		</service>

		<service id="integrated_user.security.login.form.type" class="%integrated_user.form.proxy.type.class%">
			<argument type="service" id="integrated_user.form.login.type" />
			<argument type="string">user_security_login</argument>

			<tag name="form.type" alias="user_security_login" />
		</service>

	</services>

</container>