<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="integrated_solr.subscriber.doctrine.clear.class">Integrated\Bundle\SolrBundle\EventSubscriber\DoctrineClearEventSubscriber</parameter>
    </parameters>

    <services>

        <service id="integrated_solr.subscriber.doctrine.clear" class="%integrated_solr.subscriber.doctrine.clear.class%">

            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
            <argument type="service" id="doctrine.orm.entity_manager" />

        </service>

    </services>

</container>