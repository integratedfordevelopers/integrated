<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_page.event_listener.configure_menu_subscriber.class">Integrated\Bundle\PageBundle\EventListener\ConfigureMenuSubscriber</parameter>
        <parameter key="integrated_page.event_listener.content_type_changed.class">Integrated\Bundle\PageBundle\EventListener\ContentTypeChangedListener</parameter>
        <parameter key="integrated_page.event_listener.channel_changed.class">Integrated\Bundle\PageBundle\EventListener\ChannelChangedListener</parameter>

    </parameters>

    <services>

        <service id="integrated_page.event_listener.configure_menu_subscriber" class="%integrated_page.event_listener.configure_menu_subscriber.class%">
            <argument type="service" id="security.authorization_checker" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="integrated_page.event_listener.content_type_changed" class="%integrated_page.event_listener.content_type_changed.class%">
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />
            <argument type="service" id="integrated_page.services.content_type_page" />
            <tag name="integrated_content.event_subscriber" />
        </service>

        <service id="integrated_page.event_listener.channel_changed" class="%integrated_page.event_listener.channel_changed.class%">
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />
            <argument type="service" id="integrated_page.services.content_type_page" />
            <tag name="integrated_content.event_subscriber" />
        </service>

    </services>

</container>