<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_content.solr.content.type.class">Integrated\Bundle\ContentBundle\Solr\Type\ContentType</parameter>
        <parameter key="integrated_content.solr.has_image.type.class">Integrated\Bundle\ContentBundle\Solr\Type\HasImageType</parameter>
        <parameter key="integrated_content.solr.relation_json.type.class">Integrated\Bundle\ContentBundle\Solr\Type\RelationJsonType</parameter>
        <parameter key="integrated_content.solr.property.type.class">Integrated\Bundle\ContentBundle\Solr\Type\PropertyType</parameter>

        <parameter key="integrated_content.solr.channel.extension.class">Integrated\Bundle\ContentBundle\Solr\Extension\ChannelExtension</parameter>

    </parameters>

    <services>

        <service id="integrated_content.solr.content.type" class="%integrated_content.solr.content.type.class%">
            <tag name="integrated_solr.type" />
        </service>

        <service id="integrated_content.solr.has_image.type" class="%integrated_content.solr.has_image.type.class%">
            <tag name="integrated_solr.type" />
        </service>

        <service id="integrated_content.solr.relation_json.type" class="%integrated_content.solr.relation_json.type.class%">
            <tag name="integrated_solr.type" />
        </service>

        <service id="integrated_content.solr.property.type" class="%integrated_content.solr.property.type.class%">
            <tag name="integrated_solr.type" />
        </service>

        <service id="integrated_content.solr.channel.extension" class="%integrated_content.solr.channel.extension.class%">
            <tag name="integrated_solr.type_extension" />
        </service>

    </services>

</container>
