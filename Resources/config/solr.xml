<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_page.solr.type.url.class">Integrated\Bundle\PageBundle\Solr\Type\UrlType</parameter>

    </parameters>

    <services>

        <service id="integrated_page.solr.type.url" class="%integrated_page.solr.type.url.class%">
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />
            <argument type="service" id="integrated_page.services.url_resolver" />
            <tag name="integrated_solr.type" />
        </service>

    </services>

</container>