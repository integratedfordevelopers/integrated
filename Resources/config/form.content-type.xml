		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<services>

		<service id="integrated_content.content_type.channels.type" class="%integrated_content.form.proxy.type.class%">
