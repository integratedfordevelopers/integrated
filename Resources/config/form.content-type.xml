		</service>

		<service id="integrated_content.content_type.new.form.type" class="%integrated_content.form.proxy.type.class%">
			<argument type="service" id="integrated_content.form.content_type.type" />
			<argument type="string">content_type_new</argument>

			<tag name="form.type" alias="content_type_new" />
		</service>

		<service id="integrated_content.content_type.edit.form.type" class="%integrated_content.form.proxy.type.class%">
			<argument type="service" id="integrated_content.form.content_type.type" />
			<argument type="string">content_type_edit</argument>

			<tag name="form.type" alias="content_type_edit" />
		</service>

		<service id="integrated_content.content_type.delete.form.type" class="%integrated_content.form.proxy.type.class%">
			<argument type="service" id="integrated_content.form.delete.type" />
			<argument type="string">content_type_delete</argument>

			<tag name="form.type" alias="content_type_delete" />
		</service>

		<!-- relations -->

		<service id="integrated_content.content_type.relation.new.form.type" class="%integrated_content.form.proxy.type.class%">
			<argument type="service" id="integrated_content.form.content_type.relation.type" />
			<argument type="string">content_type_relation_new</argument>

			<tag name="form.type" alias="content_type_relation_new" />
		</service>

		<service id="integrated_content.content_type.relation.edit.form.type" class="%integrated_content.form.proxy.type.class%">
			<argument type="service" id="integrated_content.form.content_type.relation.type" />
			<argument type="string">content_type_relation_edit</argument>

			<tag name="form.type" alias="content_type_relation_edit" />
		</service>

		<service id="integrated_content.content_type.relation.delete.form.type" class="%integrated_content.form.proxy.type.class%">
			<argument type="service" id="integrated_content.form.delete.type" />
			<argument type="string">content_type_relation_delete</argument>

			<tag name="form.type" alias="content_type_relation_delete" />
		</service>

        <!-- channels -->

        <service id="integrated_content.content_type.channels.type" class="%integrated_content.form.proxy.type.class%">
      			<argument type="service" id="integrated_content.form.content_type.channels.type" />
      			<argument type="string">content_type_channels</argument>
      
      			<tag name="form.type" alias="content_type_channels" />
      		</service>
      
      		<service id="integrated_content.content_type.channel.collection.type" class="%integrated_content.form.proxy.type.class%">
      			<argument type="service" id="integrated_content.form.content_type.channel.collection.type" />
      			<argument type="string">content_type_channel_collection</argument>
      
      			<tag name="form.type" alias="content_type_channel_collection" />
      		</service>
      
      		<service id="integrated_content.content_type.channel.type" class="%integrated_content.form.proxy.type.class%">
      			<argument type="service" id="integrated_content.form.content_type.channel.type" />
      			<argument type="string">content_type_channel</argument>
      
      			<tag name="form.type" alias="content_type_channel" />
