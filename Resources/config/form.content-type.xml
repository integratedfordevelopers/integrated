			<tag name="form.type" alias="content_type_channel_collection" />
		</service>

		<service id="integrated_content.content_type.channel.type" class="%integrated_content.form.proxy.type.class%">
			<argument type="service" id="integrated_content.form.content_type.channel.type" />
			<argument type="string">content_type_channel</argument>

			<tag name="form.type" alias="content_type_channel" />
