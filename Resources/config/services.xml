<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="integrated_content.mapping.metadata.driver.class">Integrated\Bundle\ContentBundle\Mapping\Driver\AnnotationsDriver</parameter>
        <parameter key="integrated_content.mapping.metadata.factory.class">Integrated\Bundle\ContentBundle\Mapping\Metadata\MetadataFactory</parameter>
        <parameter key="integrated_content.reader.document.class">Integrated\Bundle\ContentBundle\Reader\Document</parameter>
    </parameters>

    <services>
        <service id="integrated_content.mapping.metadata.driver" class="%integrated_content.mapping.metadata.driver.class%">
            <argument type="service" id="annotation_reader" />
        </service>
        <service id="integrated_content.mapping.metadata.factory" class="%integrated_content.mapping.metadata.factory.class%">
            <argument type="service" id="integrated_content.mapping.metadata.driver" />
        </service>
        <service id="integrated_content.reader.document" class="%integrated_content.reader.document.class%">
            <argument type="service" id="doctrine_mongodb" />
            <argument type="service" id="integrated_content.mapping.metadata.factory" />
        </service>
    </services>
</container>