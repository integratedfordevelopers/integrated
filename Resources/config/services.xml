<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_page.layout_locator.class">Integrated\Bundle\PageBundle\Locator\LayoutLocator</parameter>

        <parameter key="integrated_page.services.content_type_controller_manager.class">Integrated\Bundle\PageBundle\Services\ContentTypeControllerManager</parameter>

        <parameter key="integrated_page.services.content_type_page.class">Integrated\Bundle\PageBundle\Services\ContentTypePageService</parameter>
        <parameter key="integrated_page.services.url_resolver.class">Integrated\Bundle\PageBundle\Services\UrlResolver</parameter>
        <parameter key="integrated_page.services.route_resolver.class">Integrated\Bundle\PageBundle\Services\RouteResolver</parameter>

    </parameters>

    <services>

        <service id="integrated_page.layout_locator" class="%integrated_page.layout_locator.class%">
            <argument type="service" id="integrated_theme.templating.theme_manager" />
        </service>

        <service id="integrated_page.services.content_type_controller_manager" class="%integrated_page.services.content_type_controller_manager.class%" />

        <service id="integrated_page.services.content_type_page" class="%integrated_page.services.content_type_page.class%">
            <argument type="service" id="integrated_page.services.content_type_controller_manager" />
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />
        </service>

        <service id="integrated_page.services.route_resolver" class="%integrated_page.services.route_resolver.class%">
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />
            <argument type="service" id="router" />
        </service>

        <service id="integrated_page.services.url_resolver" class="%integrated_page.services.url_resolver.class%">
            <argument type="service" id="integrated_page.services.content_type_controller_manager" />
            <argument type="service" id="integrated_content.channel.context" />
            <argument type="service" id="router.default" />
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />
        </service>

    </services>
</container>
