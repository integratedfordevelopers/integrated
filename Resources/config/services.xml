<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_website.routing.page_loader.class">Integrated\Bundle\WebsiteBundle\Routing\PageLoader</parameter>

        <parameter key="integrated_website.twig.grid_extension.class">Integrated\Bundle\WebsiteBundle\Twig\Extension\GridExtension</parameter>

        <parameter key="integrated_website.website_toolbar.class">Integrated\Bundle\WebsiteBundle\EventListener\WebsiteToolbarListener</parameter>

        <parameter key="integrated_website.form.type.page.class">Integrated\Bundle\WebsiteBundle\Form\Type\PageType</parameter>

    </parameters>

    <services>

        <service id="integrated_website.routing.page_loader" class="%integrated_website.routing.page_loader.class%">
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />
            <tag name="routing.loader" />
        </service>

        <service id="integrated_website.twig.grid_extension" class="%integrated_website.twig.grid_extension.class%">
            <argument type="service" id="twig.form.renderer" />
            <argument type="service" id="form.factory" />
            <tag name="twig.extension" />
        </service>

        <service id="integrated_website.website_toolbar" class="%integrated_website.website_toolbar.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="twig" />
        </service>

        <service id="integrated_website.form.type.page" class="%integrated_website.form.type.page.class%">
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />
            <tag name="form.type" alias="integrated_website_page" />
        </service>

    </services>
</container>