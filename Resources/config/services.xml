<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="integrated_solr.mapping.file_locator_class">Integrated\Bundle\SolrBundle\Mapping\Driver\FileLocator</parameter>
        <parameter key="integrated_solr.mapping.metadata.driver_chain.class">Integrated\Bundle\SolrBundle\Mapping\Driver\Metadata\DriverChain</parameter>
        <parameter key="integrated_solr.mapping.metadata.annotations_driver.class">Integrated\Bundle\SolrBundle\Mapping\Driver\Metadata\AnnotationsDriver</parameter>
        <parameter key="integrated_solr.mapping.metadata.yaml_driver.class">Integrated\Bundle\SolrBundle\Mapping\Driver\Metadata\YamlDriver</parameter>
        <parameter key="integrated_solr.mapping.metadata.xml_driver.class">Integrated\Bundle\SolrBundle\Mapping\Driver\Metadata\XmlDriver</parameter>
    </parameters>

    <services>
        <service id="integrated_solr.mapping.file_locator" class="%integrated_solr.mapping.file_locator_class%">
            <argument /><!-- collection of directories -->
        </service>

        <service id="integrated_solr.mapping.metadata.driver_chain" class="%integrated_solr.mapping.metadata.driver_chain.class%">
            <argument type="collection">
                <argument type="service" id="integrated_solr.mapping.metadata.xml_driver" />
                <argument type="service" id="integrated_solr.mapping.metadata.yaml_driver" />
                <argument type="service" id="integrated_solr.mapping.metadata.annotations_driver" />
            </argument>
        </service>

        <service id="integrated_solr.mapping.metadata.annotations_driver" class="%integrated_solr.mapping.metadata.annotations_driver.class%" public="false">
            <argument type="service" id="annotation_reader"/>
        </service>
        <service id="integrated_solr.mapping.metadata.yaml_driver" class="%integrated_solr.mapping.metadata.yaml_driver.class%" public="false">
            <argument type="service" id="integrated_solr.mapping.file_locator" />
        </service>
        <service id="integrated_solr.mapping.metadata.xml_driver" class="%integrated_solr.mapping.metadata.xml_driver.class%" public="false">
            <argument type="service" id="integrated_solr.mapping.file_locator" />
        </service>
    </services>

</container>