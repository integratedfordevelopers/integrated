<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_page.form.type.page.class">Integrated\Bundle\PageBundle\Form\Type\PageType</parameter>

        <parameter key="integrated_page.layout_locator.class">Integrated\Bundle\PageBundle\Locator\LayoutLocator</parameter>

    </parameters>

    <services>

        <service id="integrated_page.form.type.page" class="%integrated_page.form.type.page.class%">
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />
            <argument type="service" id="integrated_page.layout_locator" />
            <tag name="form.type" alias="integrated_page_page" />
        </service>

        <service id="integrated_page.layout_locator" class="%integrated_page.layout_locator.class%">
            <argument type="service" id="kernel" />
        </service>

    </services>
</container>