<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_page.layout_locator.class">Integrated\Bundle\PageBundle\Locator\LayoutLocator</parameter>

        <parameter key="integrated_page.content_type.content_type_controller_manager.class">Integrated\Bundle\PageBundle\ContentType\ContentTypeControllerManager</parameter>

        <parameter key="integrated_page.content_type.routing_loader.class">Integrated\Bundle\PageBundle\ContentType\RoutingLoader</parameter>

        <parameter key="integrated_page.services.content_type_page.class">Integrated\Bundle\PageBundle\Services\ContentTypePageService</parameter>

    </parameters>

    <services>

        <service id="integrated_page.layout_locator" class="%integrated_page.layout_locator.class%">
            <argument type="service" id="integrated_theme.templating.theme_manager" />
        </service>

        <service id="integrated_page.content_type.content_type_controller_manager" class="%integrated_page.content_type.content_type_controller_manager.class%" />

        <service id="integrated_page.content_type.routing_loader" class="%integrated_page.content_type.routing_loader.class%">
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />
            <tag name="routing.loader" />
        </service>

        <service id="integrated_page.services.content_type_page" class="%integrated_page.services.content_type_page.class%">
            <argument type="service" id="integrated_page.content_type.content_type_controller_manager" />
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />
        </service>

    </services>
</container>
