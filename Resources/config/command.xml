<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_storage.command_migrate">Integrated\Bundle\StorageBundle\Command\MigrateCommand</parameter>
        <parameter key="integrated_storage.command_list">Integrated\Bundle\StorageBundle\Command\Filesystem\ListCommand</parameter>
        <parameter key="integrated_storage.command_filesystem_remove">Integrated\Bundle\StorageBundle\Command\Filesystem\RemoveCommand</parameter>
        <parameter key="integrated_storage.command_add">Integrated\Bundle\StorageBundle\Command\Filesystem\AddCommand</parameter>

    </parameters>

    <services>

        <service id="integrated_storage.command_filesystem_list" class="%integrated_storage.command_list%">
            <argument type="service" id="integrated_storage.registry" />
            <argument type="service" id="integrated_storage.resolver" />

            <tag name="console.command" />
        </service>

        <service id="integrated_storage.command_filesystem_remove" class="%integrated_storage.command_filesystem_remove%">
            <argument type="service" id="integrated_storage.database" />
            <argument type="service" id="integrated_storage.registry" />
            <argument type="service" id="integrated_storage.manager" />
            <argument type="service" id="integrated_storage.metadata" />

            <tag name="console.command" />
        </service>

        <service id="integrated_storage.command_add" class="%integrated_storage.command_add%">
            <argument type="service" id="integrated_storage.database" />
            <argument type="service" id="integrated_storage.registry" />
            <argument type="service" id="integrated_storage.manager" />
            <argument type="service" id="integrated_storage.decision" />
            <argument type="service" id="integrated_storage.metadata" />

            <tag name="console.command" />
        </service>

        <service id="integrated_storage.command_migrate" class="%integrated_storage.command_migrate%">
            <argument type="service" id="integrated_storage.database" />
            <argument type="service" id="integrated_storage.manager" />
            <argument type="service" id="integrated_storage.metadata" />

            <tag name="console.command" />
        </service>

    </services>

</container>
