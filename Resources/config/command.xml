<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_solr.command.indexer_run.class">Integrated\Bundle\SolrBundle\Command\IndexerRunCommand</parameter>

    </parameters>

    <services>

        <service id="integrated_solr.command.indexer_run" class="%integrated_solr.command.indexer_run.class%">
            <argument type="service" id="integrated_solr.indexer" />
            <argument type="service" id="integrated_queue.dbal.provider" />
            <argument type="service" id="kernel" />
            <argument>%kernel.root_dir%/..</argument>

            <tag name="console.command" />
        </service>

    </services>

</container>
