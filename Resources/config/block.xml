<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_block.templating.block_renderer.class">Integrated\Bundle\BlockBundle\Templating\BlockRenderer</parameter>

        <parameter key="integrated_block.listener.short_code.class">Integrated\Bundle\BlockBundle\EventListener\ShortCodeListener</parameter>

        <parameter key="integrated_block.registry.block_handler.class">Integrated\Common\Block\BlockHandlerRegistry</parameter>

        <parameter key="integrated_block.block_handler.text.class">Integrated\Bundle\BlockBundle\Block\TextBlockHandler</parameter>
        <parameter key="integrated_block.block_handler.container.class">Integrated\Bundle\BlockBundle\Block\ContainerBlockHandler</parameter>

    </parameters>

    <services>

        <service id="integrated_block.templating.block_renderer" class="%integrated_block.templating.block_renderer.class%">
            <argument type="service" id="integrated_block.registry.block_handler" />
            <argument type="service" id="integrated_theme.templating.theme_manager" />
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />
            <argument type="service" id="twig" />
        </service>

        <service id="integrated_block.listener.short_code" class="%integrated_block.listener.short_code.class%">
            <argument type="service" id="integrated_block.templating.block_renderer" />
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" />
        </service>

        <service id="integrated_block.registry.block_handler" class="%integrated_block.registry.block_handler.class%" />

        <service id="integrated_block.block_handler.text" class="%integrated_block.block_handler.text.class%">
            <tag name="integrated.block" type="text" />
        </service>

        <service id="integrated_block.block_handler.container" class="%integrated_block.block_handler.container.class%">
            <tag name="integrated.block" type="container" />
        </service>

    </services>
</container>