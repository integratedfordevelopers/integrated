<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_content.block_handler.content.class">Integrated\Bundle\ContentBundle\Block\ContentBlockHandler</parameter>

        <parameter key="integrated_content.block_handler.facet.class">Integrated\Bundle\ContentBundle\Block\FacetBlockHandler</parameter>

        <parameter key="integrated_content.block_handler.form.class">Integrated\Bundle\ContentBundle\Block\FormBlockHandler</parameter>

        <parameter key="integrated_content.block_handler.related_content.class">Integrated\Bundle\ContentBundle\Block\RelatedContentBlockHandler</parameter>

        <parameter key="integrated_content.subscriber.related_content_block_content_type.class">Integrated\Bundle\ContentBundle\EventListener\RelatedContentBlockContentTypeSubscriber</parameter>

    </parameters>

    <services>

        <service id="integrated_content.block_handler.content" class="%integrated_content.block_handler.content.class%">
            <argument type="service" id="integrated_content.provider.solarium" />
            <argument type="service" id="request_stack" />
            <tag name="integrated.block" type="content" />
        </service>

        <service id="integrated_content.block_handler.facet" class="%integrated_content.block_handler.facet.class%">
            <argument type="service" id="integrated_block.registry.block_handler" />
            <argument type="service" id="request_stack" />
            <tag name="integrated.block" type="facet" />
        </service>

        <service id="integrated_content.block_handler.form" class="%integrated_content.block_handler.form.class%">
            <argument type="service" id="integrated.form.factory" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />
            <argument type="service" id="request_stack" />
            <tag name="integrated.block" type="form" />
        </service>

        <service id="integrated_content.block_handler.search" class="%integrated_block.block_handler.class%">
            <tag name="integrated.block" type="search" />
        </service>

        <service id="integrated_content.block_handler.related_content" class="%integrated_content.block_handler.related_content.class%">
            <argument type="service" id="knp_paginator" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />
            <tag name="integrated.block" type="related_content" />
        </service>

        <service id="integrated_content.subscriber.related_content_block_content_type" class="%integrated_content.subscriber.related_content_block_content_type.class%">
            <argument type="service" id="integrated_block.metadata.factory" />
            <argument type="service" id="integrated_content.content_type_repository" />
            <tag name="kernel.event_subscriber"/>
        </service>

    </services>
</container>
