<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>

		<parameter key="integrated_user.form.login.type.class">Integrated\Bundle\UserBundle\Form\Type\LoginType</parameter>
        <parameter key="integrated_user.form.user.type.class">Integrated\Bundle\UserBundle\Form\Type\UserType</parameter>

	</parameters>

	<services>

		<service id="integrated_user.form.login.type" class="%integrated_user.form.login.type.class%">
			<argument type="service" id="service_container"/>
		</service>

        <service id="integrated_user.form.user.type" class="%integrated_user.form.user.type.class%">
            <tag name="form.type" alias="integrated_user" />
        </service>

	</services>

</container>