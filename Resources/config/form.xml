<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_storage.form.type.file.class">Integrated\Bundle\StorageBundle\Form\Type\FileType</parameter>
        <parameter key="integrated_storage.form.type.image.class">Integrated\Bundle\StorageBundle\Form\Type\ImageType</parameter>

        <parameter key="integrated_storage.form.type.file_dropzone.class">Integrated\Bundle\StorageBundle\Form\Type\DropzoneType</parameter>
        <parameter key="integrated_storage.form.type.image_dropzone.class">Integrated\Bundle\StorageBundle\Form\Type\DropzoneType</parameter>

    </parameters>

    <services>

        <service id="integrated_storage.form.type.file" class="%integrated_storage.form.type.file.class%">
            <argument type="service" id="integrated_storage.manager" />

            <tag name="form.type" alias="integrated_file" />
        </service>

        <service id="integrated_storage.form.type.image" class="%integrated_storage.form.type.image.class%">
            <argument type="service" id="integrated_storage.manager" />
            <argument type="service" id="integrated_storage.decision" />

            <tag name="form.type" alias="integrated_image" />
        </service>

        <service id="integrated_storage.form.type.file_dropzone" class="%integrated_storage.form.type.file_dropzone.class%">
            <argument type="service" id="integrated_asset.manager.stylesheet_manager" />
            <argument type="service" id="integrated_asset.manager.javascript_manager" />
            <argument type="service" id="translator" />
            <argument type="service" id="image.handling" />
            <argument>file</argument>
            <tag name="form.type" alias="integrated_file_dropzone" />
        </service>

        <service id="integrated_storage.form.type.image_dropzone" class="%integrated_storage.form.type.image_dropzone.class%">
            <argument type="service" id="integrated_asset.manager.stylesheet_manager" />
            <argument type="service" id="integrated_asset.manager.javascript_manager" />
            <argument type="service" id="translator" />
            <argument type="service" id="image.handling" />
            <argument>image</argument>
            <tag name="form.type" alias="integrated_image_dropzone" />
        </service>
    </services>

</container>
