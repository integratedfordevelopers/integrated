<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="integrated_page.form.type.page" class="Integrated\Bundle\PageBundle\Form\Type\PageType">
            <tag name="form.type" />
        </service>

        <service id="integrated_page.form.type.grid" class="Integrated\Bundle\PageBundle\Form\Type\Grid\GridType">
            <tag name="form.type" />
        </service>

        <service id="integrated_page.form.type.item" class="Integrated\Bundle\PageBundle\Form\Type\Grid\ItemType">
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />

            <tag name="form.type" />
        </service>

        <service id="integrated_page.form.type.block" class="Integrated\Bundle\PageBundle\Form\Type\Grid\BlockType">
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />

            <tag name="form.type" />
        </service>

        <service id="integrated_page.form.type.row" class="Integrated\Bundle\PageBundle\Form\Type\Grid\RowType">
            <tag name="form.type" />
        </service>

        <service id="integrated_page.form.type.column" class="Integrated\Bundle\PageBundle\Form\Type\Grid\ColumnType">
            <tag name="form.type" />
        </service>

        <service id="integrated_page.form.type.layout_choice" class="Integrated\Bundle\PageBundle\Form\Type\LayoutChoiceType">
            <argument type="service" id="integrated_page.layout_locator" />

            <tag name="form.type" />
        </service>

        <service id="integrated_page.form.content_type_page.page" class="Integrated\Bundle\PageBundle\Form\Type\ContentTypePageType">
            <argument type="service" id="integrated_page.services.content_type_controller_manager" />
            <tag name="form.type" alias="integrated_page_content_type_page" />
        </service>

    </services>

</container>
