<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_page.form.block_type.class">Integrated\Common\Form\Type\MetadataType</parameter>
        <parameter key="integrated_page.form.page_type.class">Integrated\Bundle\PageBundle\Form\Type\PageType</parameter>

    </parameters>

    <services>

        <service id="integrated_page.form.block_type" class="%integrated_page.form.block_type.class%">
            <argument type="service" id="integrated_page.metadata.factory" />
            <argument type="string">integrated_page_block</argument><!-- form name -->
        </service>

        <service id="integrated_page.form.page_type" class="%integrated_page.form.page_type.class%">
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />
            <argument type="service" id="integrated_page.template_locator" />
            <tag name="form.type" alias="integrated_page_page" />
        </service>

    </services>

</container>
