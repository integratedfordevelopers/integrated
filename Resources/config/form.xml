<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_block.form.metadata.type.block.class">Integrated\Common\Form\Type\MetadataType</parameter>

        <parameter key="integrated_block.form.type.layout_choice.class">Integrated\Bundle\BlockBundle\Form\Type\LayoutChoiceType</parameter>

        <parameter key="integrated_block.form.type.block.class">Integrated\Bundle\BlockBundle\Form\Type\BlockType</parameter>
        <parameter key="integrated_block.form.type.block_size.class">Integrated\Bundle\BlockBundle\Form\Type\BlockSizeType</parameter>
        <parameter key="integrated_block.form.type.block_filter.class">Integrated\Bundle\BlockBundle\Form\Type\BlockFilterType</parameter>

    </parameters>

    <services>

        <service id="integrated_block.form.metadata.type.block" class="%integrated_block.form.metadata.type.block.class%">
            <argument type="service" id="integrated_block.metadata.factory" />
            <argument>integrated_block_block</argument><!-- form name -->
        </service>

        <service id="integrated_block.form.type.layout_choice" class="%integrated_block.form.type.layout_choice.class%">
            <argument type="service" id="integrated_block.layout_locator" />
            <tag name="form.type" alias="integrated_block_layout_choice" />
        </service>

        <service id="integrated_block.form.type.block" class="%integrated_block.form.type.block.class%">
            <argument type="service" id="doctrine_mongodb.odm.document_manager" />
            <tag name="form.type" alias="integrated_block" />
        </service>

        <service id="integrated_block.form.type.block_size" class="%integrated_block.form.type.block_size.class%">
            <tag name="form.type" alias="integrated_block_size" />
        </service>

        <service id="integrated_block.form.type.block_filter" class="%integrated_block.form.type.block_filter.class%">
            <argument type="service" id="integrated_block.metadata.factory" />
            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
            <argument type="service" id="service_container" />
        </service>

    </services>
</container>