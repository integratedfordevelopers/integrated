<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>

		<parameter key="integrated_workflow.doctrine.state_assigned.listener.class">Integrated\Bundle\WorkflowBundle\Doctrine\EventListener\WorkflowStateAssignedInjectionListener</parameter>
		<parameter key="integrated_workflow.doctrine.log_user.listener.class">Integrated\Bundle\WorkflowBundle\Doctrine\EventListener\WorkflowLogUserInjectionListener</parameter>

	</parameters>

	<services>

		<service id="integrated_workflow.doctrine.state_assigned.listener" class="%integrated_workflow.doctrine.state_assigned.listener.class%">
			<argument type="service" id="doctrine" on-invalid="ignore" />

			<tag name="doctrine.event_subscriber" connection="default" />
		</service>

		<service id="integrated_workflow.doctrine.log_user.listener" class="%integrated_workflow.doctrine.log_user.listener.class%">
			<argument type="service" id="doctrine" on-invalid="ignore" />

			<tag name="doctrine.event_subscriber" connection="default" />
		</service>

	</services>

</container>