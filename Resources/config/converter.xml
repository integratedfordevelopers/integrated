<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>

		<parameter key="integrated_solr.converter.class">Integrated\Common\Solr\Converter\Converter</parameter>

		<parameter key="integrated_solr.converter.resolver.chain.class">Integrated\Common\Solr\Converter\Resolver\ChainResolver</parameter>

		<parameter key="integrated_solr.converter.resolver.file.class">Integrated\Common\Solr\Converter\Resolver\FileResolver</parameter>
		<parameter key="integrated_solr.converter.resolver.file.reader.yaml.class">Integrated\Common\Solr\Converter\Resolver\Reader\YamlReader</parameter>

		<parameter key="integrated_solr.converter.resolver.file.finder.class">Symfony\Component\Finder\Finder</parameter>

    </parameters>

    <services>

		<service id="integrated_solr.converter.resolver.file.reader.yaml" class="%integrated_solr.converter.resolver.file.reader.yaml.class%" />

		<!--<service id="integrated_solr.converter.resolver.file.finder" class="%integrated_solr.converter.resolver.file.finder.class%">-->

		<!--</service>-->

		<!--<service id="integrated_solr.converter.resolver.file" class="%integrated_solr.converter.resolver.file.class%">-->
			<!--<argument type="service" id="integrated_solr.converter.resolver.file.reader.yaml" />-->
			<!--<argument type="service" id="integrated_solr.converter.resolver.file.finder" />-->
		<!--</service>-->

		<service id="integrated_solr.converter.resolver.chain" class="%integrated_solr.converter.resolver.chain.class%" />

		<service id="integrated_solr.converter.resolver" alias="integrated_solr.converter.resolver.chain" />
		<!--<service id="integrated_solr.converter.resolver" alias="integrated_solr.converter.resolver.file" />-->

		<service id="integrated_solr.converter" class="%integrated_solr.converter.class%">
			<argument type="service" id="integrated_solr.converter.resolver" />
		</service>

    </services>

</container>