<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="integrated_content.bulk.registry.action_handler_registry" class="Integrated\Bundle\ContentBundle\Bulk\Registry\ActionHandlerRegistry" />

        <service id="integrated_content.bulk.content_provider" class="Integrated\Bundle\ContentBundle\Bulk\ContentProvider">
            <argument type="service" id="solarium.client" />
            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
            <argument type="service" id="security.token_storage" />
            <argument>false</argument>
        </service>

        <service id="integrated_content.bulk.action_provider" class="Integrated\Bundle\ContentBundle\Bulk\ActionProvider">
            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
        </service>

        <service id="integrated_content.bulk.bulk_handler_interface" class="Integrated\Bundle\ContentBundle\Bulk\BulkHandler\BulkHandlerInterface" />

    </services>
</container>
