<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                    http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <embedded-document name="Integrated\Bundle\ContentBundle\Document\Bulk\Embedded\RelationAction">

        <field fieldName="id" type="string" />

        <reference-one field="relation"/>
        <reference-many
            field="references"
            target-document="Integrated\Bundle\ContentBundle\Document\Content\Content" />

    </embedded-document>

</doctrine-mongo-mapping>