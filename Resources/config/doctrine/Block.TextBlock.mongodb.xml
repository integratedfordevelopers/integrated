<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                    http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <document name="Integrated\Bundle\BlockBundle\Document\Block\TextBlock">

        <field name="content" type="string" />

        <field name="publishedTitle" type="string" />
        <field name="useTitle" type="boolean" />

        <reference-one field="parentPage" target-document="Integrated\Bundle\PageBundle\Document\Page\Page" />

    </document>

</doctrine-mongo-mapping>
