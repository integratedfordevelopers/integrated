<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <embedded-document name="Integrated\Bundle\MenuBundle\Document\MenuItem" collection="menu">

        <field fieldName="name" type="string" />
        <field fieldName="label" type="string" />
        <field fieldName="uri" type="string" />
        <field fieldName="linkAttributes" type="hash" />
        <field fieldName="childrenAttributes" type="hash" />
        <field fieldName="labelAttributes" type="hash" />
        <field fieldName="attributes" type="hash" />
        <field fieldName="extras" type="hash" />
        <field fieldName="display" type="boolean" />
        <field fieldName="displayChildren" type="boolean" />

        <embed-many field="children" target-document="Integrated\Bundle\MenuBundle\Document\MenuItem" strategy="set" />

    </embedded-document>

</doctrine-mongo-mapping>
