<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<services>

		<service id="integrated_workflow.workflow.form.type" class="%integrated_workflow.form.proxy.type.class%">
			<argument type="service" id="integrated_workflow.form.workflow.type" />
			<argument type="string">workflow</argument>

			<tag name="form.type" alias="workflow" />
		</service>

		<service id="integrated_workflow.workflow.state.type" class="%integrated_workflow.form.proxy.type.class%">
			<argument type="service" id="integrated_workflow.form.workflow.state.type" />
			<argument type="string">workflow_state</argument>

			<tag name="form.type" alias="workflow_state" />
		</service>

	</services>

</container>