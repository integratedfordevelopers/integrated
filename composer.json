{
	"name": "integrated/library",
	"type": "library",
	"description": "Integrated Library",
	"keywords": ["Integrated", "content"],
	"homepage": "http://www.e-active.nl",
	"license": "MIT",
	"authors": [
		{
			"name": "e-Active",
			"homepage": "http://www.e-active.nl"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": ">=5.4",
		"symfony/dependency-injection": "~2.4",
		"symfony/event-dispatcher": "~2.4",
		"symfony/expression-language": "~2.4",
		"symfony/finder": "~2.4",
		"symfony/form": "~2.4",
		"symfony/options-resolver": "~2.4",
		"symfony/security": "~2.4",
		"symfony/serializer": "~2.4",
		"symfony/validator": "~2.4",
		"doctrine/orm": "~2.4",
		"doctrine/mongodb": ">=1.0.0",
        "doctrine/mongodb-odm": "1.0.0-BETA10@dev",
        "solarium/solarium": "3.2.0"
	},
	"require-dev": {
        "phpunit/phpunit": "4.2.*"
	},
	"autoload": {
		"psr-0": {
            "Integrated\\MongoDB\\Content\\": "src/",
			"Integrated\\MongoDB\\ContentType\\": "src/",
			"Integrated\\MongoDB\\Serializer\\": "src/",
			"Integrated\\MongoDB\\Solr\\": "src/",
            "Integrated\\Doctrine\\": "src/",
			"Integrated\\Common\\Content\\": "src/",
			"Integrated\\Common\\ContentType\\": "src/",
            "Integrated\\Common\\Converter\\": "src/",
			"Integrated\\Common\\Form\\": "src/",
			"Integrated\\Common\\Locks\\": "src/",
			"Integrated\\Common\\Queue\\": "src/",
			"Integrated\\Common\\Security\\": "src/",
			"Integrated\\Common\\Solr\\": "src/",
			"Integrated\\Common\\Validator\\": "src/"
		}
	},
    "autoload-dev": {
        "psr-0": {
            "Integrated\\Tests\\MongoDB\\": "tests/",
            "Integrated\\Tests\\Doctrine\\": "tests/",
            "Integrated\\Tests\\Common\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.9.x-dev"
        }
    }
}